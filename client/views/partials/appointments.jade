row
    button.btn.btn-sm.btn-primary.pull-left New appointment

    .input-group.pull-right(style='width: 100px')
        input.input-sm.form-control(type='text', id='search', placeholder='Search')

table.table
    thead
        tr
            th When
            th Patient
    tbody
        tr(ng-repeat="appointment in appointments | orderBy: '-when'")
            td {{appointment.when | date:'dd MMMM HH:mm'}}
            td {{appointment.patient.name}}
